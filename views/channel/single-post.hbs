<article>
  <h1>{{ post.title }}</h1>
  <div class="post-meta">
    <span>
      Published in <a href="/channel/{{ post.channel._id }}">{{ post.channel.name }}</a>, by <a href="/profile/{{ post.author._id }}">{{ post.author.name }}</a>
    </span>
  </div>
  <figure>
    <img src="https://source.unsplash.com/600x400/?waves" alt="Post Title" />
  </figure>
  <p>{{ post.content }}</p>
</article>