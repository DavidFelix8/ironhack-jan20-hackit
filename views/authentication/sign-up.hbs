<form method="POST">
  <label for="input-email">Email</label>
  <input type="email" id="input-email" required placeholder="Your Email" name="email">

  <label for="input-name">Name</label>
  <input type="text" id="input-name" required placeholder="First and Last Name" name="name">

  <label for="input-password">Password</label>
  <input type="password" id="input-password" placeholder="Strong Password" name="password" required>

  <button>Sign Up</button>
</form>